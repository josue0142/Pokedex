@model IEnumerable<Pokedex.Models.Pokemon>

@{
    ViewData["Title"] = "Lista de Pokemones";
}

<h1><i class="fas fa-paw"></i> Lista de pokemones</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create" role="button"><i class="fas fa-plus"></i> Añadir Pokemon</a>
</p>
<table class="table table-borderless">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Powers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="@item.RegionFkNavigation.color">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeFkNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionFkNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Powers)
            </td>
            <td align="right">
                <a class="btn btn-light btn-sm" asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Editar</a>
                <a class="btn btn-danger btn-sm" asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
