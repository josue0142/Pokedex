@model IEnumerable<Pokedex.Models.Pokemon>

@{
    ViewData["Title"] = "Lista de Pokemones";
}

<h1>Lista de pokemones</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Powers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeFkNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionFkNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Powers)
            </td>
            <td>
                <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id">Editar</a>|
                <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
